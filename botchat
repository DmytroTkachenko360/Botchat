import random

print("–ü—Ä–∏–≤—ñ—Ç! –Ø —Ä–æ–∑—É–º–Ω—ñ—à–∏–π —á–∞—Ç-–±–æ—Ç ü§ñ")
name = input("–Ø–∫ —Ç–µ–±–µ –∑–≤–∞—Ç–∏? ")
print(f"–†–∞–¥–∏–π —Ç–µ–±–µ –±–∞—á–∏—Ç–∏, {name}!")

mood = input("–Ø–∫ —Ç–≤—ñ–π –Ω–∞—Å—Ç—Ä—ñ–π —Å—å–æ–≥–æ–¥–Ω—ñ? ")
print(f"–¶–µ –¥–æ–±—Ä–µ, —â–æ —Ç–∏ –ø–æ—á—É–≤–∞—î—à—Å—è '{mood}'!")

answers = {
    "–ø—Ä–∏–≤—ñ—Ç": "–ü—Ä–∏–≤—ñ—Ç —â–µ —Ä–∞–∑!",
    "—è–∫ —Å–ø—Ä–∞–≤–∏": "–£ –º–µ–Ω–µ –≤—Å–µ —á—É–¥–æ–≤–æ, –¥—è–∫—É—é!",
    "—â–æ —Ç–∏ –≤–º—ñ—î—à": "–Ø –º–æ–∂—É –≤—ñ–¥–ø–æ–≤—ñ–¥–∞—Ç–∏ –Ω–∞ –∑–∞–ø–∏—Ç–∞–Ω–Ω—è, –∂–∞—Ä—Ç—É–≤–∞—Ç–∏ —ñ –ø—Ä–æ—Å—Ç–æ –±—É—Ç–∏ –¥—Ä—É–≥–æ–º!",
    "–∂–∞—Ä—Ç": random.choice([
        "–ß–æ–º—É –ø—Ä–æ–≥—Ä–∞–º—ñ—Å—Ç–∏ –Ω–µ —Ö–æ–¥—è—Ç—å –Ω–∞ –ø—Ä–∏—Ä–æ–¥—É? –ë–æ —Ç–∞–º –±–∞–≥–∞—Ç–æ –±–∞–≥—ñ–≤!",
        "–Ø –± —Ä–æ–∑–ø–æ–≤—ñ–≤ –∂–∞—Ä—Ç –ø—Ä–æ —Ä–µ–∫—É—Ä—Å—ñ—é, –∞–ª–µ —Å–ø–æ—á–∞—Ç–∫—É —Ç—Ä–µ–±–∞ —Ä–æ–∑–ø–æ–≤—ñ—Å—Ç–∏ –∂–∞—Ä—Ç –ø—Ä–æ —Ä–µ–∫—É—Ä—Å—ñ—é...",
        "–©–æ –∫–∞–∂–µ Python, –∫–æ–ª–∏ –π–æ–º—É —Å—É–º–Ω–æ? 'pass'"
    ]),
    "–ø–æ—Ä–∞–¥–∞": random.choice([
        "–ù–µ –±—ñ–π—Å—è –ø–æ–º–∏–ª–æ–∫ ‚Äî –≤–æ–Ω–∏ –Ω–∞–π–∫—Ä–∞—â—ñ –≤—á–∏—Ç–µ–ª—ñ.",
        "–ü–∏—à–∏ –∫–æ–¥ —â–æ–¥–Ω—è ‚Äî –Ω–∞–≤—ñ—Ç—å –ø–æ 15 —Ö–≤–∏–ª–∏–Ω.",
        "–ó–∞–≤–∂–¥–∏ –∫–æ–º–µ–Ω—Ç—É–π —Å–≤—ñ–π –∫–æ–¥, –º–∞–π–±—É—Ç–Ω—ñ–π —Ç–∏ —Å–∫–∞–∂–µ –¥—è–∫—É—é!"
    ])
}

while True:
    question = input("–ó–∞–ø–∏—Ç–∞–π –º–µ–Ω–µ —â–æ—Å—å –∞–±–æ –Ω–∞–ø–∏—à–∏ '–ø–æ–∫–∞': ").lower()

    if question == "–ø–æ–∫–∞":
        print(f"–ë—É–≤–∞–π, {name}! –ì–∞—Ä–Ω–æ–≥–æ –¥–Ω—è —ñ –≥–∞—Ä–Ω–æ–≥–æ –Ω–∞—Å—Ç—Ä–æ—é!")
        break
    elif question in answers:
        print(answers[question])
    else:
        print("–Ø —â–µ –≤—á—É—Å—è, –Ω–µ –∑–Ω–∞—é —è–∫ –≤—ñ–¥–ø–æ–≤—ñ—Å—Ç–∏ –Ω–∞ —Ü–µ üòÖ")
